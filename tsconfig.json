{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "experimentalDecorators": false,
    "lib": ["ES2020"],
    "module": "Node16",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
